{
    "functions": {
        "api/*.js": {
            "maxDuration": 10,
            "memory": 128
        }
    },
    "redirects": [
        {
            "source": "/",
            "destination": "https://github.com/dhyeythumar/youtube-stats-card",
            "permanent": false
        },
        {
            "source": "/src(.*)",
            "destination": "https://github.com/dhyeythumar/youtube-stats-card",
            "permanent": false
        },
        {
            "source": "/themes(.*)",
            "destination": "https://github.com/dhyeythumar/youtube-stats-card",
            "permanent": false
        },
        {
            "source": "/scripts(.*)",
            "destination": "https://github.com/dhyeythumar/youtube-stats-card",
            "permanent": false
        }
    ]
}
